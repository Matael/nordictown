\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemenordictown}
  [2017/01/23 v1.2 Metropolis Beamer theme]
\RequirePackage{etoolbox}
\RequirePackage{pgfopts}
\pgfkeys{/nordictown/.cd,
  .search also={
    /nordictown/inner,
    /nordictown/outer,
    /nordictown/color,
    /nordictown/font,
  }
}
\pgfkeys{
  /nordictown/titleformat plain/.cd,
    .is choice,
    regular/.code={%
      \let\nordictown@plaintitleformat\@empty%
      \setbeamerfont{standout}{shape=\normalfont}%
    },
    smallcaps/.code={%
      \let\nordictown@plaintitleformat\@empty%
      \setbeamerfont{standout}{shape=\scshape}%
    },
    allsmallcaps/.code={%
      \let\nordictown@plaintitleformat\MakeLowercase%
      \setbeamerfont{standout}{shape=\scshape}%
      \PackageWarning{beamerthemenordictown}{%
        Be aware that titleformat plain=allsmallcaps can lead to problems%
      }
    },
    allcaps/.code={%
      \let\nordictown@plaintitleformat\MakeUppercase%
      \setbeamerfont{standout}{shape=\normalfont}%
      \PackageWarning{beamerthemenordictown}{%
        Be aware that titleformat plain=allcaps can lead to problems%
      }
    },
}
\pgfkeys{
  /nordictown/titleformat/.code=\pgfkeysalso{
      font/titleformat title=#1,
      font/titleformat subtitle=#1,
      font/titleformat section=#1,
      font/titleformat frame=#1,
      titleformat plain=#1,
    }
}
\pgfkeys{/nordictown/.cd,
  usetitleprogressbar/.code=\pgfkeysalso{outer/progressbar=frametitle},
  noslidenumbers/.code=\pgfkeysalso{outer/numbering=none},
  usetotalslideindicator/.code=\pgfkeysalso{outer/numbering=fraction},
  nosectionslide/.code=\pgfkeysalso{inner/sectionpage=none},
  darkcolors/.code=\pgfkeysalso{color/background=dark},
  blockbg/.code=\pgfkeysalso{color/block=fill, inner/block=fill},
}
\newcommand{\nordictown@setdefaults}{
  \pgfkeys{/nordictown/.cd,
    titleformat plain=regular,
  }
}
\providecommand{\tikzexternalenable}{}
\providecommand{\tikzexternaldisable}{}
\useinnertheme{nordictown}
\useoutertheme{nordictown}
\usecolortheme{nordictown}
\usefonttheme{nordictown}
\AtEndPreamble{%
  \@ifpackageloaded{pgfplots}{%
    \RequirePackage{pgfplotsthemetol}
  }{}
}
\newcommand{\metroset}[1]{\pgfkeys{/nordictown/.cd,#1}}
\def\nordictown@plaintitleformat#1{#1}
\newcommand{\plain}[2][]{%
  \PackageWarning{beamerthemenordictown}{%
    The syntax `\plain' may be deprecated in a future version of Metropolis.
    Please use a frame with [standout] instead.
  }
  \begin{frame}[standout]{#1}
    \nordictown@plaintitleformat{#2}
  \end{frame}
}
\newcommand{\mreducelistspacing}{\vspace{-\topsep}}
\nordictown@setdefaults
\ProcessPgfOptions{/nordictown}
\endinput

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemenordictown}[2017/01/23 Metropolis color theme]
\RequirePackage{pgfopts}
\pgfkeys{
  /nordictown/color/block/.cd,
    .is choice,
    transparent/.code=\nordictown@block@transparent,
    fill/.code=\nordictown@block@fill,
}
\pgfkeys{
  /nordictown/color/background/.cd,
    .is choice,
    dark/.code=\nordictown@colors@dark,
    light/.code=\nordictown@colors@light,
}
\newcommand{\nordictown@color@setdefaults}{
  \pgfkeys{/nordictown/color/.cd,
    background=light,
    block=transparent,
  }
}
